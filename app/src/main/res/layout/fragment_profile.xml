<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">


    <ImageView
        android:id="@+id/image_profile_fragment"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegisterUser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:srcCompat="@drawable/ic_account" />

    <TextView
        android:id="@+id/user_name_profile_fragment"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:backgroundTint="#00937575"
        android:text="Nombre de usuario"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/purple_800"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/image_profile_fragment"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/btnCreateLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="Create Local"
        android:textAlignment="textStart"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        app:icon="@drawable/ic_account"
        app:iconSize="28dp"
        app:iconTint="@color/purple_400"
        app:layout_constraintTop_toBottomOf="@+id/user_name_profile_fragment"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="Edit profile"
        android:textAlignment="textStart"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        app:icon="@drawable/ic_account"
        app:iconSize="28dp"
        app:iconTint="@color/purple_400"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateLocal"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnKeys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:text="Edit pasword and e-mail"
        android:textAlignment="viewStart"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        app:icon="@android:drawable/ic_menu_preferences"
        app:iconSize="28dp"
        app:iconTint="@color/purple_400"
        app:layout_constraintTop_toBottomOf="@+id/btnEdit"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:text="Log out"
        android:textAlignment="viewStart"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        app:icon="?attr/homeAsUpIndicator"
        app:iconSize="30dp"
        app:iconTint="@color/purple_400"
        app:iconTintMode="src_in"
        app:layout_constraintTop_toBottomOf="@+id/btnKeys"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegisterUser"
        android:layout_width="138dp"
        android:layout_height="50dp"
        android:layout_marginTop="484dp"
        android:text="Prueba"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.button.MaterialButton>


</androidx.constraintlayout.widget.ConstraintLayout>